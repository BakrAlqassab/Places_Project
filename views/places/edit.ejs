    <% layout('./layouts/boilerplate') %>
    <div class="row">
      <h1 class="text-center">Edit place</h1>
      <div class="col-6 offset-3">
        <form form action="/places/<%= place._id %>?_method=PUT" method='POST'>
          <div class='mb-3'>
            <label class="form-label" for="title">title</label>
            <input  class="form-control" type="text" id="title" name="place[title]" value="<%= place.title %>" />
          </div>
          <div class='mb-3'>
            <label  class="form-label"  for="location">location</label>
            <input class="form-control" type="text" id="location" name="place[location]" value="<%= place.location %>" />
          </div>
          <div class='mb-3'>
            <label  class="form-label"  for="image">Image URL</label>
            <input class="form-control" type="text" id="image" name="place[image]" value="<%= place.image %>"/>
          </div>
          <div class='mb-3'>
            <label  class="form-label"  for="price">place Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input type="text" class="form-control" placeholder="0.00" id='price' aria-label="price" name="place[price]" value="<%= place.price %>" >
          </div>
        </div>
    
          <div class='mb-3'>
            <label  class="form-label"  for="description">Description URL</label>
            <textarea class="form-control" type="text" id="description" name="place[description]" /><%= place.description  %></textarea>
          </div>
      
          <button class="btn btn-success mb-3">Update place</button>
        </form>
            <a href="/places/<%= place._id %>">Back to place</a>
      </div>
    </div>
    


