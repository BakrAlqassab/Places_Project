
<% layout('./layouts/boilerplate') %>

<div id="map" class='map'></div>
<h1 class="mt1">All Places</h1>
<!-- <a href='/places/new'>new Places</a> -->

    <% for(let place of places){%>
   
        <div class=placesForm>
            <div class=row>
                <div class="img-row">
                <% if(place.image.length){%>
                    <img src="<%=place.image  %>" class="img-fluid" alt=""/>
                    <% }else { %>
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/300px-No_image_available.svg.png" alt=""/>
                   <% } %>

                
                
                    </div>
                <div class=""">
                    <div class="card-body">
                        <h5 class='card-title'>
                            <%= place.title %>
                        </h5>
                      
                        <p class="card-text"><%= place.description %></p>
                        <p class="card-text"><small class="text-light"> <%= place.location %></small></p>
                        <a class="btn btn-primary" href="/places/<%= place._id %>"> View    <%= place.title %> </a>
                    </div>
                </div>
            </div>
        </div>
   <% }%> 

   <script>
    const mapToken = "<%-process.env.MAPBOX_TOKEN %>";
    const places = {features:<%-JSON.stringify(places) %>};
  </script>
